{
    "manifest_version": 2,

    "name": "looper.io",
    "description": "Share content with all of your friends on looper.io",
    "version": "1.0",

    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],

    "browser_action": {
        "default_icon": "icon.png"
    },

    "background": {
        "page": "background.html"
    },

    "web_accessible_resources": [
        "looper.html",
        "looper.css",
        "images/looper_logo.png",
        "fonts/OpenSans-Semibold.ttf"
    ]
}